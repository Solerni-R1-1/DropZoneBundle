{# Retour Ã  la liste des badges #}
<div class="slrn-container-dropzone__header">
    {% if ( byUserMod is defined and byUserMod == 0 ) %}
        <a class="black_link" href="{{ path('icap_dropzone_drops', {'resourceId': dropzone.id}) }}">
            <i class="icon-chevron-left no_underline"></i> {{ 'Return to copies'|trans({}, 'icap_dropzone') }}
        </a>
    {% elseif state is defined and state == 'preview' %}
        {# back to correction list#}
        <a title="{{ 'evalDone'|trans({}, 'solerni') }}" href="{{ path('icap_dropzone_drop_detail_by_user',{'resourceId': dropzone.id,'dropId':correction.drop.id}) }}" class="black_link">
            <i class="icon-chevron-left no_underline"></i> {{ 'back_corrections'|trans({}, 'solerni') }}
        </a>
    {% elseif state is defined and state == 'show' %}
       {# back to admin correction list #}
        <a title="{{ 'evalDone'|trans({}, 'solerni') }}" href="{{ path('icap_dropzone_drops_detail',{'resourceId': dropzone.id,'dropId':correction.drop.id}) }}" class="black_link">
            <i class="icon-chevron-left no_underline"></i> {{ 'back_corrections'|trans({}, 'solerni') }}
        </a>
    {% elseif viewCorrections is defined and viewCorrections == true %}
        {# back to dropzone result #}
        <a title="{{ 'evalDone'|trans({}, 'solerni') }}" href="{{ path( 'icap_dropzone_open', { 'resourceId': dropzone.getId() } ) }}" class="black_link">
            <i class="icon-chevron-left no_underline"></i> {{ 'back_result'|trans({}, 'solerni') }}
        </a>
    {% else %}
        {# back to my badges workspace list #}
        <a title="{{ 'page_my_badges'|trans({}, 'platform') }}" href="{{ path( 'claro_workspace_open_tool', { 'workspaceId': workspace.getId(), 'toolName': 'my_badges' } ) }}" class="black_link">
            <i class="icon-chevron-left no_underline"></i> {{ 'back_my_badges'|trans({}, 'solerni') }}
        </a>
    {% endif %}
    {#% if badges is not empty %}
       {% for badge in badges %}
            {% set badgeEntity = badge.badge %}
            <div class="slrn-dropzone-bloc">
                <div class='drop__annoncement__badge'>
                    <img src="{{ image(badgeEntity.webPath).cropResize(75, 75) }}" alt="{{ badgeEntity.name }}" class="drop__annoncement__badge__img" width="75" height="75" />
                    <span class='drop__annoncement__title bold'>Badge &laquo; {{ badgeEntity.name }} &raquo;</span>
                </div>
            </div>
        {% endfor %}
    {% endif %#}
</div>






    
               


